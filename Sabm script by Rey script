local Players = game:GetService("Players")
local player = Players.LocalPlayer
local PlayerGui = player:WaitForChild("PlayerGui")

-- âœ… Intro Screen
local IntroGui = Instance.new("ScreenGui")
IntroGui.Parent = PlayerGui
IntroGui.IgnoreGuiInset = true
IntroGui.ResetOnSpawn = false

local Background = Instance.new("Frame")
Background.Parent = IntroGui
Background.Size = UDim2.new(1,0,1,0)
Background.BackgroundColor3 = Color3.fromRGB(135, 206, 250) -- light blue
Background.BorderSizePixel = 0

-- Text "Created by Rey_Script"
local Title = Instance.new("TextLabel")
Title.Parent = Background
Title.Size = UDim2.new(1,0,0,50)
Title.Position = UDim2.new(0,0,0.4,0)
Title.Text = "âœ¨ Created by Rey_Script âœ¨"
Title.Font = Enum.Font.GothamBold
Title.TextSize = 32
Title.TextColor3 = Color3.fromRGB(255,255,255)
Title.TextTransparency = 0.3 -- ðŸ”¹ lebih tipis
Title.BackgroundTransparency = 1

-- Text "Discord: UdinPeot"
local Discord = Instance.new("TextLabel")
Discord.Parent = Background
Discord.Size = UDim2.new(1,0,0,40)
Discord.Position = UDim2.new(0,0,0.5,0)
Discord.Text = "Discord: UdinPeot"
Discord.Font = Enum.Font.Gotham
Discord.TextSize = 24
Discord.TextColor3 = Color3.fromRGB(255,255,255)
Discord.TextTransparency = 0.3 -- ðŸ”¹ lebih tipis
Discord.BackgroundTransparency = 1

-- ðŸŒŸ Star Effect
local stars = {}
local function createStar()
	local star = Instance.new("Frame")
	star.Size = UDim2.new(0, math.random(4,8), 0, math.random(4,8))
	star.Position = UDim2.new(math.random(),0, math.random(),0)
	star.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
	star.BackgroundTransparency = 0.5
	star.BorderSizePixel = 0
	star.Parent = Background

	local corner = Instance.new("UICorner")
	corner.CornerRadius = UDim.new(1,0)
	corner.Parent = star
	table.insert(stars, star)
end

for i=1,30 do
	createStar()
end

-- Hapus intro setelah 3 detik
task.delay(3, function()
	IntroGui:Destroy()

	-- âœ… Setelah intro â†’ Buat tombol
	local ScreenGui = Instance.new("ScreenGui")
	ScreenGui.Parent = PlayerGui
	ScreenGui.ResetOnSpawn = false

	local Button = Instance.new("TextButton")
	Button.Parent = ScreenGui
	Button.Size = UDim2.new(0,200,0,50)
	Button.Position = UDim2.new(0.5,-100,0.5,-25)
	Button.Text = "Execute Owner Visible"
	Button.BackgroundColor3 = Color3.fromRGB(70,130,180) -- steel blue
	Button.TextColor3 = Color3.fromRGB(255,255,255)
	Button.Font = Enum.Font.GothamBold
	Button.TextSize = 20
	Button.AutoButtonColor = true

	local UICorner = Instance.new("UICorner")
	UICorner.CornerRadius = UDim.new(0,12)
	UICorner.Parent = Button

	local count = 0
	Button.MouseButton1Click:Connect(function()
		count = count + 1
		if count <= 2 then
			-- âœ… Jalankan perintah
			local success,err = pcall(function()
				local target = player.PlayerGui.Main.Right.Content.Owner
				if target then
					target.Visible = true
				end
			end)
			if not success then
				warn("Error: "..tostring(err))
			end
		else
			Button.Text = "âš  Cannot be executed 3 times"
			task.wait(2)
			Button.Text = "Execute Owner Visible"
			count = 0 -- balik normal
		end
	end)
end)
